<h1>Recipes!</h1>

<table class="table">


<% @recipes.each do |recipe| %>
  <li><%= link_to recipe.title, recipe_path(recipe) %> <%= link_to "Edit", edit_recipe_path(recipe) %> <%= link_to "Delete", recipe_path(recipe), method: :delte, data: { confirm: 'Are you sure you want to delete this data?'} %></li>
<% end %>
<%= link_to "New Recipe", new_recipe_path, class: 'btn btn-sm btn-default' %>



</table>
