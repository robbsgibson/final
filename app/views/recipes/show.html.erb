<h1> <%= @recipe.title %></p> </h1>

<p> Description: <%= @recipe.description %></p>

<h3>Ingredients</h3>

<table class="table">
<tr>
  <th>Item</th>
  <th>Quantity</th>
  <th>Measurement</th>
</tr>
<% @ingredients.each do |ingredient| %>
  <tr>
 <td><p><%= ingredient.product.name %></p></td>
    <td><p><%= ingredient.quantity %></p></td>
    <td><p><%= ingredient.measurement %></p></td> 
</tr>

