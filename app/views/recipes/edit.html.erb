<%= form_for @recipe do |form|%>
 <div class="form-group">
  <%= form.label :title%>
  <%= form.text_field :title, class: "form-control"%>
</div>
<div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control" %>
  </div>
  <%= form.button 'Update Recipe', class: "btn btn-default" %>
<% end %>